@model IEnumerable<CommsRoomInvent.Models.DataModels.CRoomReport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReportStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreformedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeScheduled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeEnded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfFloors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCRs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialConsiderations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportStatus.ReportStatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Site.SiteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating.RatingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreformedBy.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeScheduled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeStarted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeEnded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfFloors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfCRs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialConsiderations)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
